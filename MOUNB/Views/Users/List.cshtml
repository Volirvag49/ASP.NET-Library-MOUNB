@model X.PagedList.IPagedList<MOUNB.Models.User>
@using X.PagedList.Mvc;
@{
    Layout = null;
}
<head>
    <title></title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/base/all.css")" rel="stylesheet" type="text/css" />
</head>
<div id="content">
    <p>
        @Html.ActionLink("Добавить", "Create", new { }, new { @class = "viewDialog", data_dialog_title = "Добавить" })
    </p>
    <form id="searchForm" action="@Url.Action("List")" method="get">
        <p>
            Поиск: <input id="searchString" name="searchString" type="text" value="" placeholder="Введите имя">
            <input type="submit" value="Поиск">
        </p>
    </form>
    <table class="table">
        <tr id="contentSorter">
            <th>
                @Html.ActionLink("ФИО", "List", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th>
                @Html.ActionLink("Логин", "List", new { sortOrder = ViewBag.LoginSortParm, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th>
                @Html.ActionLink("Должность", "List", new { sortOrder = ViewBag.PositionSortParm, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th>
                @Html.ActionLink("Роль", "List", new { sortOrder = ViewBag.RoleSortParm, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Login)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Position)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role)
                </td>
                <td>
                    @Html.ActionLink("Смотреть", "Details", new { id = item.Id },
            new { @class = "viewDialog", data_dialog_title = "Просмотр" }) |
                    @Html.ActionLink("Изменить", "Edit", new { id = item.Id },
            new { @class = "viewDialog", data_dialog_title = "Редактировать" }) |
                    @Html.ActionLink("Удалить", "Delete", new { id = item.Id },
            new { @class = "viewDialog", data_dialog_title = "Удалить" })
                </td>
            </tr>
        }

    </table>
    <br />
    <div id="contentPager">
        Лист @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) Из @Model.PageCount
        @Html.PagedListPager(Model, page => Url.Action("List",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
    </div>

</div>
<script src='@Url.Content("~/Scripts/jquery-3.2.1.min.js")' type="text/javascript"></script>
<script src="//code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<script>
    $(document).ready(function () {
        $.ajaxSetup({ cache: false });
        $(".viewDialog").on("click", function (e) {
            e.preventDefault();
            $("<div id='dialogContent'></div>")
                .addClass("dialog")
                .appendTo("body")
                .load(this.href)
                .dialog({
                    show: { effect: "blind", duration: 100 },
                    minHeight: 300,
                    minWidth: 600,
                    resizable: true,
                    position: { my: "center", at: "top", of: ".table" },
                    title: $(this).attr("data-dialog-title"),
                    close: function () { $(this).remove() },
                    modal: true
                });
        });
        // Поиск
        $("#searchForm").submit(function (event) {
            event.preventDefault();
            $.ajax({
                url: $("#searchForm").attr('action'),
                data: $("#searchForm").serialize(),
                type: 'GET',
                cache: false,
                success: function (data) {
                    $('#content').html(data);
                }
            });
        });
    });
</script>
